<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piller">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.DrugInfoActivity" />
        <activity
            android:name=".activities.DrugOccurrenceActivity"
            android:parentActivityName=".activities.AddNewDrugActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.AddNewDrugActivity" />
        </activity>
        <activity android:name=".activities.AddNewDrugActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.CalendarActivity" />
        </activity>
        <activity android:name=".activities.ManageAccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity android:name=".activities.CalendarActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ManageSupervisorsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ManageAccountActivity" />
        </activity>

        <receiver
            android:name=".notifications.AlarmReceiver"
            android:enabled="true" />

        <service
            android:name=".notifications.NotificationService"
            android:enabled="true" />

        <activity
            android:name=".activities.DrugInformation"
            android:excludeFromRecents="true"
            android:label="Notification"
            android:launchMode="singleTask"
            android:taskAffinity="" />
    </application>

</manifest>