<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/add_profile_layout">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New profile name"
        android:inputType="text"
        app:met_baseColor="@color/myTextColor"
        app:met_iconPadding="0sp"
        app:met_iconRight="@drawable/ic_profile"
        app:met_primaryColor="@color/myTextColor"
        app:met_textColorHint="@color/myTextColor" />


</LinearLayout>