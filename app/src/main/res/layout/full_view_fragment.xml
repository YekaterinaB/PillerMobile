<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piller.fragments.FullViewFragment">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/fv_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:forwardButtonSrc="@drawable/ic_arrow_right"
        app:headerColor="#ffffffff"
        app:headerLabelColor="@color/titleInItems"
        app:highlightedDaysLabelsColor="#000000"
        app:previousButtonSrc="@drawable/ic_arrow_left" />

    <include
        android:id="@+id/loading_screen"
        layout="@layout/loading_screen" />
</FrameLayout>