<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/round_corner">

    <ImageView
        android:id="@+id/ocr_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/dbi_drug_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ocr_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="81dp"
        android:contentDescription="@string/fdi_open_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_circle" />

    <ImageView
        android:id="@+id/profile_icon_image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fdi_open_camera"
        app:layout_constraintBottom_toBottomOf="@+id/ocr_open_camera"
        app:layout_constraintEnd_toEndOf="@+id/ocr_open_camera"
        app:layout_constraintStart_toStartOf="@+id/ocr_open_camera"
        app:layout_constraintTop_toTopOf="@+id/ocr_open_camera"
        app:srcCompat="@drawable/ic_camera" />
</androidx.constraintlayout.widget.ConstraintLayout>